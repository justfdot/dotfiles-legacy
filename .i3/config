# -*- mode: i3wm-config -*-
# i3 config file

# Variables
set $mod mod4
set $ws1 web
set $ws2 term
set $ws3 dev
set $ws4 music
set $ws5 torrent
set $ws6 inc
set $ws7 misc
set $ws9 samsung
set $ws0 arandr

workspace_layout tabbed

# jump from wsX to wsY and back to wsX by pressing only mod+Y
workspace_auto_back_and_forth yes
bindsym $mod+Tab workspace back_and_forth

# The "smart" setting hides borders on workspaces with only one window visible
hide_edge_borders smart

new_window pixel 2
for_window [window_role="pop-up"] border none
for_window [window_role="bubble"] border none
for_window [window_role="task_dialog"] border none
for_window [window_role="Preferences"] border none
for_window [window_type="dialog"] border none
for_window [window_type="menu"] border none

# Font for window titles
font pango: Meslo LG M 8

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# start a terminal
bindsym $mod+Return exec sakura
#i3-sensible-terminal

# kill focused window
bindsym $mod+c kill
#$mod+Shift+q kill

# change focus
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+h focus left
bindsym $mod+l focus right
# alternatively, you can use the cursor keys:
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right
# move focused window
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+h move left
bindsym $mod+Shift+l move right
# alternatively, you can use the cursor keys:
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right


# split in horizontal orientation
bindsym $mod+Ctrl+h split h
# split in vertical orientation
bindsym $mod+Ctrl+v split v

# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen

# change container layout (stacked, tabbed, toggle split)
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split

# toggle tiling / floating
bindsym $mod+Shift+space floating toggle
# change focus between tiling / floating windows
bindsym $mod+space focus mode_toggle

# focus the parent container
bindsym $mod+p focus parent
# focus the child container
bindsym $mod+d focus child

# switch to workspace
bindsym $mod+1 workspace $ws1
bindsym $mod+2 workspace $ws2
bindsym $mod+3 workspace $ws3
bindsym $mod+4 workspace $ws4
bindsym $mod+5 workspace $ws5
bindsym $mod+6 workspace $ws6
bindsym $mod+7 workspace $ws7
bindsym $mod+9 workspace $ws9
bindsym $mod+0 workspace $ws0

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace $ws1
bindsym $mod+Shift+2 move container to workspace $ws2
bindsym $mod+Shift+3 move container to workspace $ws3
bindsym $mod+Shift+4 move container to workspace $ws4
bindsym $mod+Shift+5 move container to workspace $ws5
bindsym $mod+Shift+6 move container to workspace $ws6
bindsym $mod+Shift+7 move container to workspace $ws7
bindsym $mod+Shift+9 move container to workspace $ws9
bindsym $mod+Shift+0 move container to workspace $ws0

# reload the configuration file
bindsym $mod+Shift+c reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart
# exit i3 (logs you out of your X session)
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'"

# Autorun
exec --no-startup-id feh --bg-scale ~/img/wallpaper
exec --no-startup-id setxkbmap "us,ru" ",winkeys" "ctrl:nocaps,grp_led:caps"
exec --no-startup-id urxvtd --quiet --opendisplay --fork
exec --no-startup-id compton
exec --no-startup-id redshift
exec --no-startup-id eyeskeeper

# Hotkeys
bindsym Control+space exec --no-startup-id "xkblayout-state set +1 && pkill -RTMIN+2 i3blocks"
bindsym F1 exec --no-startup-id rofi -show run -lines 10 -eh 2 -width 100 -padding 340 -opacity "93" -bw 0
bindsym $mod+Print exec --no-startup-id scrot '%d.%m.%Y[$wx$h]%T.png' -e 'mv $f /home/justf/img/shots/'
bindsym $mod+t exec --no-startup-id notify-send -u low -t 100 "<span size='34000'>$(echo -e "\uf017") $(date +%H:%M)</span>"

bindsym $mod+x exec --no-startup-id xset dpms force off

# bindsym $mod+Control+Up exec --no-startup-id "amixer set Master 5%+ && pkill -RTMIN+1 i3blocks"
# bindsym $mod+Control+Down exec --no-startup-id "amixer set Master 5%- && pkill -RTMIN+1 i3blocks"
bindsym $mod+Control+Up exec --no-startup-id "amixer set PCM 5%+ && pkill -RTMIN+1 i3blocks"
bindsym $mod+Control+Down exec --no-startup-id "amixer set PCM 5%- && pkill -RTMIN+1 i3blocks"
bindsym XF86MonBrightnessUp exec --no-startup-id xbacklight -set 90%
bindsym XF86MonBrightnessDown exec --no-startup-id xbacklight -set 10%

# Floating windows
for_window [class="Lxappearance"] floating enable
# for_window [class="(?i)telegram"] floating enable sticky enable resize set 600px 748px move absolute position 766px 0px
# for_window [class="(?i)sakura" title="emacs-todo"] floating enable sticky enable resize set 694px 748px move absolute position 672px 0px
for_window [class="emacs-todo"] floating enable sticky enable move absolute position 678px 0px

# Make the currently focused window a scratchpad
bindsym $mod+Shift+minus move scratchpad
# Show the first scratchpad window
bindsym $mod+Escape scratchpad show

# Automatically putting clients on specific workspaces
# assign [class="Transmission"]           â†’ $ws5

# Start i3bar to display a workspace bar
bar{
    i3bar_command             /usr/bin/i3bar
    status_command            i3blocks
    mode                      dock
    workspace_buttons         yes
    position                  bottom
    font                      pango:Meslo 11px
    tray_padding              2px

    # colors{
    #     background            #171717
    #     separator             #171717
    #     statusline            #A89984

    #     #class                border  backgr. text
    #     focused_workspace     #171717 #171717 #FABD2F
    #     active_workspace      #171717 #171717 #FABD2F
    #     inactive_workspace    #171717 #171717 #A89984
    #     urgent_workspace      #FABD2F #FABD2F #171717
    # }
    colors{
        background            #161719
        separator             #161719
        statusline            #969896

        #class                border  backgr. text
        focused_workspace     #161719 #161719 #F0C674
        active_workspace      #161719 #161719 #F0C674
        inactive_workspace    #161719 #161719 #969896
        urgent_workspace      #F0C674 #F0C674 #161719
    }
}

# class                       border  backgr. text    indicator
client.focused                #c5c8c6 #c5c8c6 #151515 #C5C8C6
client.focused_inactive       #151515 #131313 #A89984 #A89984
client.unfocused              #151515 #131313 #A89984 #A89984
